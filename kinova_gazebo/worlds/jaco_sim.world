<?xml version="1.0" ?>
<sdf version="1.4">
  
  <world name="default">
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Global light source -->
    <include>
      <uri>model://sun</uri>
    </include>
<!--
    <include>
      <uri>model://cone</uri>
      <pose>0 0 0 1.5707963 0 0</pose>
    </include>
-->

<include>
  <uri>model://left_basket</uri>
  <pose>-0.17 0.4 0.01 0 0 0</pose> //0.4
</include>

<include>
  <uri>model://right_board</uri>
  <pose>0.4 0.4 0.01 0 0 0</pose>
</include>

<joint name="left" type="revolute">
      <parent>world</parent>
      <child>left_basket</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
</joint>

<joint name="right" type="revolute">
      <parent>world</parent>
      <child>right_board</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
</joint>



    <!-- Focus camera on tall pendulum -->
    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose>4.927360 -4.376610 3.740080 0.000000 0.275643 2.356190</pose>
        <view_controller>orbit</view_controller>
      </camera>
    </gui>

  </world>
</sdf>
